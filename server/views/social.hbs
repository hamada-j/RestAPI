<h2>Messages</h2>
<hr>
<h2> <span style="color: rgb(196, 160, 160);">{{message.count}}</span> Mesages Now in JS.io Admin Area</h2>
<hr>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>New Message</h2>
            <form action="/admin/social" method="POST" id="Form">
                <div class="form-group row">
                    <label for="autor" class="col-sm-2 col-form-label">Admin</label>
                    <div class="col-sm-10">
                        <input name="autor" type="text" class="form-control" value="Admin">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="titulo" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input name="titulo" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="categoria" class="col-sm-2 col-form-label">Cat.</label>
                    <div class="col-sm-10">
                        <input name="categoria" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="fecha" class="col-sm-2 col-form-label">Date</label>
                    <div class="col-sm-10">
                        <input name="fecha" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="texto" class="col-sm-2 col-form-label">Text of Message</label>
                    <div class="col-sm-10">
                        <input name="texto" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="texto" class="col-sm-2 col-form-label">image of Message</label>
                    <div class="col-sm-10">
                        <input name="texto" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </form>
            <hr>

        </div>
        <hr>
        <div class="col-12">
            <h2>All Messages</h2>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Message Id</th>
                        <th scope="col">Date</th>
                        <th scope="col">Author</th>
                        <th scope="col">Title</th>
                        <th scope="col">Category</th>
                        <th scope="col">Text</th>
                        <th scope="col">Image</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each message.posts as |post|}}
                    <tr>
                        <th scope="row">{{post.id}}#</th>
                        <td>{{post.fecha}}</td>
                        <td>{{post.autor}}</td>
                        <td>{{post.titulo}}</td>
                        <td>{{post.categoria}}</td>
                        <td>{{post.texto}}</td>
                        <td class="imagenDiscout"><img src="{{post.imagen}}" alt="Image"></td>
                        <td><a href="/admin/social/edit/{{post.id}}" class="btn btn-sm btn-primary">Response</a>
                        </td>
                        <td><a href="/admin/social/delete/{{post.id}}" class="btn btn-sm btn-danger"
                                onclick="return confirm('Â¿are you ?')">Delete</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<hr>

<div class="col">
    <h2>Response to Messages</h2>
    <form action="/admin/social/update" method="POST" id="Form">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">Message Id</label>
            <div class="col-sm-10">
                <input name="id" type="text" class="form-control" value="{{postEdit.id}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="autor" class="col-sm-2 col-form-label">Admin</label>
            <div class="col-sm-10">
                <input name="autor" type="text" class="form-control" value="Admin">
            </div>
        </div>
        <div class="form-group row">
            <label for="titulo" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input name="titulo" type="text" class="form-control" value="{{postEdit.titulo}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="categoria" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <input name="categoria" type="text" class="form-control" value="{{postEdit.categoria}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="fecha" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">
                <input name="fecha" type="text" class="form-control" value="{{ postEdit.fetcha}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="texto" class="col-sm-2 col-form-label">Text of Message</label>
            <div class="col-sm-10">
                <input name="texto" type="text" class="form-control" value="{{postEdit.texto}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="imagen" class="col-sm-2 col-form-label">image of Message</label>
            <div class="col-sm-10">
                <input name="imagen" type="text" class="form-control" value="{{postEdit.imagen}}">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    </form>
    <hr>

</div>
