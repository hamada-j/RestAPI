    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Employee Name</label>
        <div class="col-sm-10">
            <input name="name" type="text" class="form-control" value="{{employee.name}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="lastname" class="col-sm-2 col-form-label">Employee LastName</label>
        <div class="col-sm-10">
            <input name="lastname" type="text" class="form-control" value="{{employee.lastname}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Employee Email</label>
        <div class="col-sm-10">
            <input name="email" type="text" class="form-control" value="{{employee.email}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Employee Email-Password</label>
        <div class="col-sm-10">
            <input name="password" type="text" class="form-control" value="{{employee.password}}">
        </div>
    </div>

    <div class="form-group row">
        <label for="address" class="col-sm-2 col-form-label">Employee Adress</label>
        <div class="col-sm-10">
            <input name="address" type="text" class="form-control" value="{{employee.address}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="phone" class="col-sm-2 col-form-label">Employee Phone</label>
        <div class="col-sm-10">
            <input name="phone" type="text" class="form-control" value="{{employee.phone}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="photo" class="col-sm-2 col-form-label">Employee Photo</label>
        <div class="col-sm-10">
            <input name="photo" type="text" class="form-control" value="{{employee.photo}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="birthdate" class="col-sm-2 col-form-label">Employee Birth Date</label>
        <div class="col-sm-10">
            <input name="birthdate" type="text" class="form-control" value="{{employee.birthdate}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="salary" class="col-sm-2 col-form-label">Employee Salary</label>
        <div class="col-sm-10">
            <input name="salary" type="text" class="form-control" value="{{employee.salary}}">
