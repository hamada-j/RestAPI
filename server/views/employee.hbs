<h2>Employees Of JS.io</h2>
<hr>
<div class="container">
    <div class="row">
        {{#each arrEmployee as |emp|}}
        <div class="col-6">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{emp.photo}}" class="card-img" alt="employee: {{emp.name}}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{emp.name}} {{emp.lastname}}</h5>
                            <p class="card-text">Id: {{emp.id}}</p>
                            <p class="card-text">Departamen: {{emp.fk_departamen}}</p>
                            <p class="card-text">Birth date: {{emp.birthdate}}</p>
                            <p class="card-text">Salary: {{emp.salary}}</p>
                            <p class="card-text">Email: {{emp.email}}</p>
                            <p class="card-text">Phone: {{emp.phone}}</p>
                            <p class="card-text"><small class="text-muted"><a href="/admin/employee/edit/{{emp.id}}"
                                        class="btn btn-sm btn-primary">Edit</a></small></p>
                            <p class="card-text"><small class="text-muted"><a href="/admin/employee/delete/{{emp.id}}"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('Â¿are you ?')">Delete</a></small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<hr>
<hr>
<h2>Employee Form</h2>
<form action="/admin/employee" method="POST" id="Form">
    {{!-- <div class="form-group row">
