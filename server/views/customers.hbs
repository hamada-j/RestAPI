<h2>Customers Table</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer Id</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Customer Address</th>
            <th scope="col">Customer Region Id</th>
            <th scope="col">Customer Deteils</th>
            <th scope="col">Customer Edit</th>
            <th scope="col">Customer Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each arrCustomers as |cust|}}
        <tr>
            <th scope="row">{{cust.id}}#</th>
            <td>{{cust.id}}</td>
            <td>{{cust.name}}</td>
            <td>{{cust.address}}</td>
            <td><a href="/admin/regions/{{cust.id}}">{{cust.fk_region}}</a></td>
            <td><a href="/admin/customers/{{cust.id}}" class="btn btn-sm btn-primary">See</a></td>
            <td><a href="/admin/customers/{{cust.id}}" class="btn btn-sm btn-primary">Edit</a></td>
            <td><a href="/admin/customers/delete/{{cust.id}}" class="btn btn-sm btn-danger"
                    onclick="return confirm('¿are you ?')">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Customer</h2>
<table class="table table-dark" id="#{{cust._id}}">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer Id</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Customer Address</th>
            <th scope="col">Customer Region Id</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            <th scope="col">All-Customers</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">info</th>
            <td>{{customer.id}}</td>
            <td>{{customer.name}}</td>
            <td>{{customer.address}}</td>
            <td><a href="/admin/regions/{{customer._id}}">{{customer.fk_region}}</a></td>
            <td><a href="/admin/customers/{{cust.id}}" class="btn btn-sm btn-primary">Editar</a></td>
            <td><a href="/admin/customers/delete/{{cust.id}}" class="btn btn-sm btn-danger"
                    onclick="return confirm('¿are you ?')">Delete</a></td>
            <td><a href="/admin/customers" class="btn btn-sm btn-primary">All-Customers</a></td>
        </tr>
    </tbody>
</table>


<h2>Customers Form</h2>
<form action="/admin/customers" method="POST" id="Form">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Customer Name</label>
        <div class="col-sm-10">
            <input name="name" type="text" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group row">
        <label for="address" class="col-sm-2 col-form-label">Adress</label>
        <div class="col-sm-10">
            <input name="address" type="text" class="form-control" id="inputPassword3">
        </div>
    </div>
    <fieldset class="form-group">
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Region</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input name="fk_region" class="form-check-input" type="radio" id="gridRadios1" value="1">
                    <label class="form-check-label" for="gridRadios1">Africa
                    </label>
                </div>
                <div class="form-check">
                    <input name="fk_region" class="form-check-input" type="radio" id="gridRadios2" value="2">
                    <label class="form-check-label" for="gridRadios2">Asia
                    </label>
                </div>
                <div class="form-check ">
                    <input name="fk_region" class="form-check-input" type="radio" id="gridRadios3" value="3">
                    <label class="form-check-label" for="gridRadios3">Oceania
                    </label>
                </div>
                <div class="form-check ">
                    <input name="fk_region" class="form-check-input" type="radio" id="gridRadios3" value="4">
                    <label class="form-check-label" for="gridRadios3">Europa
                    </label>
                </div>
                <div class="form-check ">
                    <input name="fk_region" class="form-check-input" type="radio" id="gridRadios3" value="5">
                    <label class="form-check-label" for="gridRadios3">America
                    </label>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
</form>