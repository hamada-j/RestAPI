<h2>Dashboard JS.io</h2>
<hr>
<h2>Regions and Territories</h2>
<div id="myfirstchart" style="height: 250px;"></div>
<script>
    new Morris.Line({
        // ID of the element in which to draw the chart.
        element: 'myfirstchart',
        // Chart data records -- each entry in this array corresponds to a point on
        // the chart.
        data: [
            { year: '2014', value: 0, value2: 0 },
            { year: '2015', value: 1, value2: 1 },
            { year: '2016', value: 2, value2: 3 },
            { year: '2017', value: 4, value2: 8 },
            { year: '2018', value: 5, value2: 10 },
            { year: '2019', value: 5, value2: 18 },
            { year: '2020', value: 5, value2: 21 }
        ],
        // The name of the data record attribute that contains x-values.
        xkey: 'year',
        // A list of names of data record attributes that contain y-values.
        ykeys: ['value', 'value2'],
        lineWidth: 1,
        // Labels for the ykeys -- will be displayed when you hover over the
        // chart.
        labels: ['Regions', 'Territories'],
        lineColors: ['#007bff', '#28a745']
    });
</script>




<h2>Products and Orders</h2>
<div id="mytertiarychart" style="height: 250px;"></div>
<p style="text-align: center;" id="algo"></p>
<script>
    new Morris.Area({
        // ID of the element in which to draw the chart.
        element: 'mytertiarychart',
        // Chart data records -- each entry in this array corresponds to a point on
        // the chart.
        data: [
            { x: '2014 Q4', y: 3, z: 7 },
            { x: '2015 Q1', y: 3, z: 4 },
            { x: '2016 Q2', y: 1, z: 0 },
            { x: '2017 Q3', y: 2, z: 5 },
            { x: '2018 Q4', y: 8, z: 2 },
            { x: '2019 Q1', y: 4, z: 2 },
            { x: '2020 Q4', y: 2, z: 4 }
        ],
        // The name of the data record attribute that contains x-values.
        xkey: 'x',
        // A list of names of data record attributes that contain y-values.
        ykeys: ['y', 'z'],
        // Labels for the ykeys -- will be displayed when you hover over the
        // chart.
        labels: ['Products', 'Ordres'],
        lineColors: ['#fd7e14', '#17a2b8'],
        lineWidth: 1
    }).on('click', function (i, row) {
        console.log(i, row)
        let algo = document.getElementById('algo')
        algo.innerText = i
    });
</script>



