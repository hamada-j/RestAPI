<h2>Departments Table</h2>
<hr>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Departament Id</th>
            <th scope="col">Departament Name</th>
        </tr>
    </thead>
    <tbody>
        {{#each arrDepart as |departament|}}
        <tr>
            <th scope="row">{{departament.id}}#</th>
            <td>{{departament.id}}</td>
            <td>{{departament.name}}</td>
            <td><a href="/admin/departaments/edit/{{departament.id}}" class="btn btn-sm btn-primary">Editar</a></td>
            <td><a href="/admin/departaments/delete/{{departament.id}}" class="btn btn-sm btn-danger"
                    onclick="return confirm('Â¿are you ?')">Borrar</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<hr>
<h2>New Department</h2>
<form action="/admin/departaments/" method="POST">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Dep. Name</label>
        <div class="col-sm-10">
            <input name="name" type="text" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
</form>
<hr>
<h2>Edit Department</h2>
<form action="/admin/departaments/update" method="patch">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Dep. Id</label>
        <div class="col-sm-4">
            <input name="id" type="number" class="form-control" id="inputEmail3" value="{{element.id}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Dep. Name</label>
        <div class="col-sm-8">
            <input name="name" type="text" class="form-control" id="inputEmail3" value="{{element.name}}">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
</form>
<hr>