<h2>Search Of Products Discount</h2>
<hr>
<form action="/admin/discount/" method="POST">
    <div class="form-group">
        <label for="exampleFormControlInput1">Discount</label>
        <input type="text" class="form-control" id="input" placeholder="discount">
    </div>
    <button type="submit" id="button" class="btn btn-primary">Send</button>
</form>
<h2>All Info Table</h2>
<hr>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Unit Stock</th>
            <th scope="col">Unit on Order</th>
            <th scope="col">Discount</th>
            <th scope="col">Supplier Id</th>
            <th scope="col">Category Id</th>

            <th scope="col">photo</th>
        </tr>
    </thead>
    <tbody>
        {{#each infoArr as |cust|}}
        <tr>
            <th scope="row">{{cust.id}}#</th>
            <td>{{cust.id}}</td>
            <td>{{cust.name}}</td>
            <td>{{cust.unitprice}}</td>
            <td>{{cust.unitstock}}</td>
            <td>{{cust.unitonorder}}</td>
            <td>{{cust.discunt}}</td>
            <td><a href="/admin/suppliers/edit/{{cust.fk_supplier}}">{{cust.fk_supplier}}</a></td>
            <td><a href="/admin/category/edit/{{cust.fk_category}}">{{cust.fk_category}}</a></td>
            <td><a href="/admin/orders/see/{{cust.fk_orders}}">{{cust.fk_orders}}</a></td>
            <td><a href="/admin/products/edit/{{fk_product}}">{{cust.fk_product}}</a></td>

            <td class="imagenDiscout"><img src="{{cust.photo}}" alt="Image"></td>

            {{/each}}
    </tbody>
</table>
<hr>

<script>
    let button = document.querySelector('#button');
    button.addEventListener('click', function (e) {
        e.preventDefault();
        let text = document.querySelector('#input').value;
        console.log(text)
        window.location = '/admin/discount/' + text;
    });
</script>